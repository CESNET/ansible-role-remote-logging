# https://wiki.cesnet.cz/doku.php?id=interni_sluzby:clm#nginx_logy
source s_nginx_a { file("/var/log/nginx/access.log" program-override("nginx_web_http_access")); };
source s_nginx_e { file("/var/log/nginx/error.log" program-override("nginx_web_http_error")); };

log { source(s_nginx_a); destination(d_{{ remote_logging_conf }}); };
log { source(s_nginx_e); destination(d_{{ remote_logging_conf }}); };
